@page
@model ServiceHost.Pages.SearchModel
@{    
    ViewData["Title"] = "نتیجه جست‌وجو";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">نتیجه جست‌وجو برای @Model.SearchedString</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="shop-header">
                                    <div class="shop-header__left">
                                        <div class="shop-header__left__message">
                                            Showing 1 to 9 of 15 (2 Pages)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="shop-page-content">

                                    <div class="row shop-product-wrap grid three-column">
                                        @foreach (var product in Model.SearchedProducts)
                                        {
                                            <div class="col-12 col-lg-4 col-md-4 col-sm-6">
                                                <div class="single-grid-product grid-view-product">
                                                    <div class="single-grid-product__image">
                                                        
                                                        @if (product.HasDisc)
                                                        {
                                                            <div class="single-grid-product__label">
                                                                <span class="sale">@product.DiscRate%-</span>
                                                            </div>
                                                        }

                                                        <a asp-page="/Product" asp-route-id="@product.Slug">
                                                            <img src="~/ProductPictures/@product.Img" class="img-fluid" alt="@product.ImgAlt" title="@product.ImgTitle">
                                                        </a>

                                                    </div>

                                                    <div class="single-grid-product__content">
                                                        <div class="single-grid-product__category-rating">
                                                            <span class="category">
                                                                <a asp-page="/Category" asp-route-id="@product.CategorySlug" >@product.Category</a>
                                                            </span>
                                                            <span class="rating">
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                            </span>
                                                        </div>

                                                        <h3 class="single-grid-product__title">
                                                            <a asp-page="/Product" asp-route-id="@product.Slug">@product.Name</a>
                                                        </h3>

                                                        <p class="single-grid-product__price">
                                                            @if (product.HasDisc)
                                                            {
                                                                <span class="discounted-price">@product.PriceWithDisc تومان</span>
                                                                <span class="main-price discounted">@product.Price تومان</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="main-price">@product.Price تومان</span>
                                                            }
                                                        </p>
                                                        @if (product.HasDisc)
                                                        {
                                                            <div class="product-countdown" data-countdown="@product.EndDate"></div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                </div>

                                <div class="pagination-area">
                                    <div class="pagination-area__left">
                                        Showing 1 to 9 of 11 (2 Pages)
                                    </div>
                                    <div class="pagination-area__right">
                                        <ul class="pagination-section">
                                            <li>
                                                <a class="active" href="#">1</a>
                                            </li>
                                            <li>
                                                <a href="#">2</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>