@page
@model ServiceHost.Pages.AccountModel
@{    
    ViewData["Title"] = "ورود و ثبت‌نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود و ثبت‌نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ورود و ثبت‌نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.LoginMessage != null)
{
    <div class="alert alert-danger">@Model.LoginMessage</div>
}
@if (Model.SigninMessage != null)
{
    <div class="alert alert-danger">@Model.SigninMessage</div>
}

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">

                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="Naqme78">
                                            </div>
                                            <div class="col-12">
                                                <label>رمز عبور</label>
                                                <input type="password" name="password" placeholder="رمز عبور">
                                            </div>
                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link"> رمز عبور خود را فراموش کردید؟</a>
                                            </div>
                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                <form method="post" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت‌نام</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام</label>
                                                <input type="text" name="fullname" placeholder="نغمه درودی">
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="Naqme78">
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>شماره موبایل*</label>
                                                <input type="number" name="mobileNum" placeholder="09123456789">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>رمز عبور</label>
                                                <input type="password" name="password" placeholder="رمز عبور">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>تایید رمز عبور</label>
                                                <input type="password" name="rePassword" placeholder="تایید رمز عبور">
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت‌نام</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>