@model List<IM.Application.Contracts.Inventory.Models.OperationViewModel>
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">لاگ گردش انبار</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>تعداد</th>
            <th>تاریخ</th>
            <th>عملیات</th>
            <th>موجودی فعلی</th>
            <th>عملگر</th>
            <th>توضیحات</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var operation in Model)
        {
            <tr class="text-white @(operation.Operation? "bg-success" : "bg-danger")">
                <td>@operation.Id</td>
                <td>@operation.Count</td>
                <td>@operation.OperationDate</td>
                <td>
                    @if (operation.Operation)
                    {
                        <span>ورود به انبار</span>
                    }
                    else
                    {
                        <span>خروج از انبار</span>
                    }
                </td>
                <td>@operation.CurrentCnt</td>
                <td>@operation.Operator</td>
                <td>@operation.Desc</td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>